<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <!-- 网易云音乐主页的 TabLayout 效果 -->
  <com.tomeokin.widget.jotablayout.JoTabLayout
      android:id="@+id/tabLayout1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:indicatorColor="@color/red500"
      app:indicatorGravity="BOTTOM"
      app:indicatorShape="LINE"
      app:indicatorBounceEnabled="false"
      >

    <com.tomeokin.widget.jotablayout.TabView
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_weight="1"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:tabTextSize="14dp"
        app:tabTitle="个性推荐"
        app:textColorNormal="@color/grey700"
        app:textColorSelected="@color/red500"
        />

    <com.tomeokin.widget.jotablayout.TabView
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_weight="1"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:tabTextSize="14dp"
        app:tabTitle="歌单"
        app:textColorNormal="@color/grey700"
        app:textColorSelected="@color/red500"
        />

    <com.tomeokin.widget.jotablayout.TabView
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_weight="1"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:tabTextSize="14dp"
        app:tabTitle="主播电台"
        app:textColorNormal="@color/grey700"
        app:textColorSelected="@color/red500"
        />

    <com.tomeokin.widget.jotablayout.TabView
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_weight="1"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:tabTextSize="14dp"
        app:tabTitle="排行榜"
        app:textColorNormal="@color/grey700"
        app:textColorSelected="@color/red500"
        />

  </com.tomeokin.widget.jotablayout.JoTabLayout>

  <com.tomeokin.widget.jotablayout.JoTabLayout
      android:id="@+id/tabLayout2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:indicatorColor="@color/red500"
      app:indicatorGravity="BOTTOM"
      app:indicatorShape="LINE"
      app:indicatorBounceEnabled="false"
      >

    <com.tomeokin.widget.jotablayout.TabView
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_weight="1"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:tabTextSize="14dp"
        app:tabTitle="个性推荐"
        app:textColorNormal="@color/grey700"
        app:textColorSelected="@color/red500"
        />

    <com.tomeokin.widget.jotablayout.TabView
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_weight="1"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:tabTextSize="14dp"
        app:tabTitle="歌单"
        app:textColorNormal="@color/grey700"
        app:textColorSelected="@color/red500"
        />

    <com.tomeokin.widget.jotablayout.TabView
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_weight="1"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:tabTextSize="14dp"
        app:tabTitle="主播电台"
        app:textColorNormal="@color/grey700"
        app:textColorSelected="@color/red500"
        />

    <com.tomeokin.widget.jotablayout.TabView
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_weight="1"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:tabTextSize="14dp"
        app:tabTitle="排行榜"
        app:textColorNormal="@color/grey700"
        app:textColorSelected="@color/red500"
        />

  </com.tomeokin.widget.jotablayout.JoTabLayout>

</LinearLayout>